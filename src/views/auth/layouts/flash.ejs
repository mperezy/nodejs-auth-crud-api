<% if (signinMessage.length > 0) {
        var flashClass = "";

        if(signinMessage == 'No user found!!') {
            flashClass = 'info';
        }
        else {
            flashClass = 'danger';
        }
%>
    <div class="alert alert-<%= flashClass %>" style="margin-top: 5%">
        <%= signinMessage %>
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% } %>

<% if (signupMessage.length > 0) { %>
    <div class="alert alert-danger" style="margin-top: 5%">
        <%= signupMessage %>
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% } %>